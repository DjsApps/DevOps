pipeline {
    agent any
	environment {
		AWS_DEFAULT_REGION="eu-west-2"
	}
    stages {
        stage('CreateEc2') {
            steps {
			sh '''
                echo 'EC2 Created'
				date
				/usr/local/bin/aws --version
				'''
            }
        }
        stage('GetEc2Details') {
            steps {
			sh '''
                echo 'EC2 Details Fething'
				date
				/usr/local/bin/aws ec2 describe-instances
				'''
            }
        }
        stage('AddTagsToEC2') {
            steps {
                echo 'Tags Added to Ec2'
            }
        }
        stage('UpdateEC2') {
            steps {
                echo 'EC2 Updated'
            }
        }
    }
}
